server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /usr/share/nginx/html;

        # Add index.php to the list if you are using PHP
        index index.html;

        server_name _;

        location / {
                try_files $uri $uri/ =404;
        }

        location /experiments {
                proxy_pass http://localhost:8000;
        }
}